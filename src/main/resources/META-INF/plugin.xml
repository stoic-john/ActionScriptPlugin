<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.stoic.ActionScriptPlugin</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>ActionScript</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://stoicstudio.com">Stoic</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        A simple syntax highlighter for ActionScript3.<br>
        Supports .as files.
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="ActionScript"
                implementationClass="com.stoic.actionscriptplugin.ActionScriptFileType"
                fieldName="INSTANCE"
                language="ActionScript"
                extensions="as"/>

        <lang.syntaxHighlighterFactory
                language="ActionScript"
                implementationClass="com.stoic.actionscriptplugin.ActionScriptSyntaxHighlighterFactory"/>
        
        <lang.parserDefinition
                language="ActionScript"
                implementationClass="com.stoic.actionscriptplugin.parser.ActionScriptParserDefinition"/>
        
        <lang.formatter
                language="ActionScript"
                implementationClass="com.stoic.actionscriptplugin.formatter.ActionScriptFormattingModelBuilder"/>
    </extensions>
    
    <actions>
        <action id="ActionScript.NewFile"
                class="com.stoic.actionscriptplugin.actions.CreateActionScriptFileAction"
                text="ActionScript File"
                description="Create new ActionScript file">
            <add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewFile"/>
        </action>
    </actions>
</idea-plugin>